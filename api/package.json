{
    "name": "explorer-api",
    "description": "API for Tangle Explorer",
    "version": "1.0.0",
    "author": "Martyn Janes <martyn.janes@iota.org>",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/explorer.git/tree/master/api"
    },
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-lint": "eslint src --ext .tsx,.ts",
        "build-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build": "npm-run-all build-clean build-compile build-lint build-config",
        "serve-mon": "nodemon ./dist/index",
        "start-dev": "run-p serve-mon build-watch",
        "start": "node ./dist/index"
    },
    "engines": {
        "node": "10.x.x"
    },
    "dependencies": {
        "@iota/core": "^1.0.0-beta.30",
        "@iota/iota.js": "github:iotaledger/iota.js#854d4aec947cbed9e01762869e859e041078ab89",
        "@iota/transaction-converter": "^1.0.0-beta.30",
        "@iota/validators": "^1.0.0-beta.30",
        "abort-controller": "^3.0.0",
        "aws-sdk": "^2.814.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "mqtt": "^4.2.5",
        "node-fetch": "^2.6.1",
        "socket.io": "^3.0.3",
        "uuid": "^8.3.1",
        "zeromq": "^6.0.0-beta.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.9",
        "@types/node": "^14.14.9",
        "@types/socket.io": "^2.1.11",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "copyfiles": "^2.4.1",
        "eslint": "^7.14.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^30.7.8",
        "eslint-plugin-unicorn": "^23.0.0",
        "nodemon": "^2.0.6",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.1.2"
    }
}
